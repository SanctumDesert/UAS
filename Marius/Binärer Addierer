#include <stdio.h>

int main()
{
    int z1[4];
    int z2[4];
    int result[4];
    int CA;
    int ubertrag = 0;
    
    printf("Bitte geb die erste 4 bit stellige binär zahl ein, trenne die bits mit ,\n");
    scanf("%i,%i,%i,%i", &z1[3], &z1[2], &z1[1], &z1[0]); fflush(stdin);
    printf("Nun bitte die Zweite Zahl \n");
    scanf("%i,%i,%i,%i", &z2[3], &z2[2], &z2[1], &z2[0]); fflush(stdin);
    
    // Rechnen
    for (int i = 0; i < 4; i++){
        // Aditionstabelle 
        if(ubertrag == 0){
            if(z1[i] == 0 && z2[i] == 0){
                result[i] = 0;
                ubertrag = 0;
            }else if(z1[i] == 1 && z2[i] == 0){
                result[i] = 1;
                ubertrag = 0;
            }else if(z1[i] == 0 && z2[i] == 1){
                result[i] = 1;
                ubertrag = 0;
            }else if(z1[i] == 1 && z2[i] == 1){
                result[i] = 1;
                ubertrag = 1;
            }   
        }else{
            if(z1[i] == 0 && z2[i] == 0){
                result[i] = 1;
                ubertrag = 0;
            }else if(z1[i] == 1 && z2[i] == 0){
                result[i] = 0;
                ubertrag = 1;
            }else if(z1[i] == 0 && z2[i] == 1){
                result[i] = 0;
                ubertrag = 1;
            }else if(z1[i] == 1 && z2[i] == 1){
                result[i] = 1;
                ubertrag = 1;
            }
        }
        if(i == 4){
            CA = ubertrag;
        }
        
    }
    printf("Das ergebnis ist \n");
    printf("%i %i %i %i ", result[3], result[2], result[1], result[0]);
    printf("Der Übertrag ist : \n");
    printf("%i",CA);
    return 0;
}
