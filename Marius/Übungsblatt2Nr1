#include <stdio.h>

int main(){
    
    int eingabe;
    printf("Höhe? \n");
    scanf("%i", &eingabe);
    if(eingabe < 200){
        printf("maritimes Klima !");
    }else if(eingabe >= 200 && eingabe < 1800 ){
        printf("Regenwald");
    }else if(eingabe >= 1800 && eingabe < 2300){
        printf("immergrüner Wald");
    }else if(eingabe >= 2300 && eingabe < 3500){
        printf("alpines Klima");
    }else if(eingabe >= 3500 && eingabe < 4200){
        printf("ewiges Eis");
    }
    return 0;
}
